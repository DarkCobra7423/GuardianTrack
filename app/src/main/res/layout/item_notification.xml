<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/notification_background_light"
    android:padding="16dp"
    android:orientation="horizontal"
    android:elevation="4dp"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_bell_off"
        app:tint="@color/notification_icon_color" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/stateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ALERTA"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_state_error"
            android:padding="4dp"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:32"
            android:textSize="10sp"
            android:textColor="#000000"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n de la alerta"
            android:textColor="#949494"
            android:textSize="14sp"
            android:layout_marginTop="6dp" />
    </LinearLayout>
</LinearLayout>
