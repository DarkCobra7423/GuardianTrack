<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Campo de búsqueda por CURP -->
    <EditText
        android:id="@+id/etCurp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresa CURP"
        android:inputType="text" />

    <!-- Botón para buscar -->
    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar" />

    <!-- Información de la persona desaparecida -->
    <TextView
        android:id="@+id/tvInfoPersona"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Información de la persona desaparecida"
        android:visibility="gone" />

    <!-- Formulario para reportar avistamiento -->
    <LinearLayout
        android:id="@+id/llFormularioAvistamiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/etUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ubicación del avistamiento"
            android:inputType="text" />

        <EditText
            android:id="@+id/etDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripción del avistamiento"
            android:inputType="text" />

        <Button
            android:id="@+id/btnEnviarAvistamiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enviar Avistamiento" />
    </LinearLayout>
</LinearLayout>
